// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String?   @unique
  roleName      String    // '一般員工', '財務', etc.
  permissions   String[]  // ['general', 'finance_audit', etc.]
  approverId    String?
  approver      User?     @relation("Approver", fields: [approverId], references: [id])
  subordinates  User[]    @relation("Approver")
  claims        Claim[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Vendor {
  id                String    @id @default(uuid())
  name              String
  serviceContent    String?
  bankCode          String?
  bankAccount       String?
  isFloatingAccount Boolean   @default(false)
  status            VendorStatus    @default(active)
  isBlacklisted     Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  claims            Claim[]

  @@index([status])
  @@index([name])
}

enum VendorStatus {
  active
  pending_add
  pending_update
  pending_delete
  deleted
}

enum ClaimStatus {
  draft
  pending_approval
  pending_finance
  approved
  paid
  pending_evidence
  pending_finance_review
  completed
  rejected
  cancelled
}

enum ClaimType {
  employee
  vendor
  service
  payment
}

model Claim {
  id              String      @id @default(uuid())
  type            ClaimType
  payee           String
  vendorId        String?
  vendor          Vendor?     @relation(fields: [vendorId], references: [id])
  applicantId     String
  applicant       User        @relation(fields: [applicantId], references: [id])
  date            DateTime    @default(now())
  status          ClaimStatus
  description     String
  amount          Float
  paymentDetails  PaymentDetails?
  lineItems       ClaimItem[]
  serviceDetails  ServiceDetails?
  datePaid        DateTime?
  evidenceFiles   String[]
  noReceiptReason String?
  history         ClaimHistory[]
  paymentId       String?
  payment         Payment?    @relation(fields: [paymentId], references: [id])
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Performance indexes for common queries
  @@index([status])
  @@index([applicantId])
  @@index([applicantId, status])
  @@index([status, type])
  @@index([vendorId])
  @@index([paymentId])
  @@index([payee])
}

model ClaimItem {
  id              String   @id @default(uuid())
  claimId         String
  claim           Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  date            DateTime
  category        String?
  description     String
  amount          Float
  invoiceNumber   String?
  fileUrl         String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ClaimHistory {
  id        String   @id @default(uuid())
  claimId   String
  claim     Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  timestamp DateTime @default(now())
  actorId   String
  actorName String
  action    String   // 'submitted', 'approved', 'paid', etc.
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum VendorRequestType {
  add
  update
  delete
}

enum RequestStatus {
  pending
  approved
  rejected
}

model VendorRequest {
  id            String    @id @default(uuid())
  type          VendorRequestType
  vendorId      String?
  data          Json?     // Partial<Vendor>
  status        RequestStatus    @default(pending)
  timestamp     DateTime  @default(now())
  applicantName String?
  originalData  Json?     // Snapshot

  @@index([status])
  @@index([timestamp])
}

model Payment {
  id          String    @id @default(uuid())
  payee       String
  paymentDate DateTime
  amount      Float
  claims      Claim[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum InvoiceStatus {
  obtained
  not_yet
  unable
}

model PaymentDetails {
  id                 String        @id @default(uuid())
  claimId            String        @unique
  claim              Claim         @relation(fields: [claimId], references: [id], onDelete: Cascade)
  transactionContent String
  payerNotes         String?
  invoiceStatus      InvoiceStatus
  invoiceNumber      String?
  invoiceDate        DateTime?
  invoiceFile        String?
  invoiceUrl         String?
  bankCode           String?
  bankAccount        String?
  expenseCategory    String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  @@index([invoiceStatus])
}

model ServiceDetails {
  id                  String   @id @default(uuid())
  claimId             String   @unique
  claim               Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  idNumber            String?
  email               String?
  registeredAddress   String?
  servicePeriodStart  DateTime?
  servicePeriodEnd    DateTime?
  bankName            String?
  bankCode            String?
  bankAccount         String?
  idFrontImage        String?
  idBackImage         String?
  bankBookImage       String?
  idFrontUrl          String?
  idBackUrl           String?
  bankBookUrl         String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
